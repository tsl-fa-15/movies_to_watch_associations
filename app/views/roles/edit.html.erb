<!-- Validation failure messages -->

<% if @role.errors.any? %>
  <% @role.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Role #<%= @role.id %></h3>
      </div>
      <div class="panel-body">
        <%= form_tag role_url(@role.id), :method => "patch", :class => "form-horizontal" do %>
          <!-- Label and input for actor_id -->
          <div class="form-group">
            <label for="actor_id" class="col-sm-2 control-label">
              Actor
            </label>
            <div class="col-sm-10">
              <%= select_tag :actor_id, options_from_collection_for_select(Actor.all, :id, :name, @role.actor_id), class: 'form-control' %>
            </div>
          </div>

          <!-- Label and input for movie_id -->
          <div class="form-group">
            <label for="movie_id" class="col-sm-2 control-label">
              Movie
            </label>
            <div class="col-sm-10">
              <%= select_tag :movie_id, options_from_collection_for_select(Movie.all, :id, :title, @role.movie_id), class: 'form-control' %>
            </div>
          </div>

          <!-- Label and input for character_name -->
          <div class="form-group">
            <label for="character_name" class="col-sm-2 control-label">
              Character name
            </label>
            <div class="col-sm-10">
              <input type="text" id="character_name" name="character_name" placeholder="Character name" class="form-control" value="<%= @role.character_name %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input type="submit" value="Update Role" class="btn btn-warning">
              or
              <%= link_to "Cancel", role_url(@role.id) %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
