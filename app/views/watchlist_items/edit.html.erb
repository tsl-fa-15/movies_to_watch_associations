<!-- Validation failure messages -->

<% if @watchlist_item.errors.any? %>
  <% @watchlist_item.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Watchlist Item #<%= @watchlist_item.id %></h3>
      </div>
      <div class="panel-body">
        <%= form_tag watchlist_item_url(@watchlist_item.id), :method => "patch", :class => "form-horizontal" do %>
          <!-- Label and input for user_id -->
          <div class="form-group">
            <label for="user_id" class="col-sm-2 control-label">
              User
            </label>
            <div class="col-sm-10">
              <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @watchlist_item.user_id %>">
            </div>
          </div>

          <!-- Label and input for movie_id -->
          <div class="form-group">
            <label for="movie_id" class="col-sm-2 control-label">
              Movie
            </label>
            <div class="col-sm-10">
              <input type="text" id="movie_id" name="movie_id" placeholder="Movie" class="form-control" value="<%= @watchlist_item.movie_id %>">
            </div>
          </div>

          <!-- Label and input for watched -->
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <div class="checkbox">
                <label for="watched">
                  <input type="checkbox" id="watched" name="watched" value="1" <%= "checked" if @watchlist_item.watched %>>
                  Watched
                </label>
              </div>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input type="submit" value="Update Watchlist Item" class="btn btn-warning">
              or
              <%= link_to "Cancel", watchlist_item_url(@watchlist_item.id) %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
